{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules", "test", "dist"]
}
